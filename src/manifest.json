{
  "manifest_version": 2,
  "name": "Bird Shortcuts",
  "version": "0.1.0",
  "description": "Thunderbird の標準機能にキーボードショートカットやボタンから素早くアクセス。まずは“文字化け修復”。",
  "applications": {
    "gecko": {
      "id": "bird-shortcuts@example.com",
      "strict_min_version": "115.0"
    }
  },
  "permissions": [
    "messagesRead",
    "menus",
    "mailTabs",
    "messages",
    "compose",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "message_display_action": {
    "default_title": "文字化け修復",
    "default_icon": { "32": "icons/repair-32.png" }
  },
  "commands": {
    "action-1": {
      "suggested_key": { "default": "Ctrl+Shift+E", "mac": "Command+Shift+E" },
      "description": "Run mapped action #1 (初期値: エンコーディング修復)"
    },
    "action-2": { "description": "Run mapped action #2" },
    "action-3": { "description": "Run mapped action #3" },
    "action-4": { "description": "Run mapped action #4" },
    "action-5": { "description": "Run mapped action #5" },
    "action-6": { "description": "Run mapped action #6" },
    "action-7": { "description": "Run mapped action #7" },
    "action-8": { "description": "Run mapped action #8" },
    "action-9": { "description": "Run mapped action #9" },
    "action-10": { "description": "Run mapped action #10" }
  },
  "experiment_apis": {
    "birdShortcuts": {
      "schema": "experiments/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["birdShortcuts"]],
        "script": "experiments/implementation.js"
      }
    }
  }
}
  